<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DetailTutorActivity">

    <LinearLayout
        android:id="@+id/layout_name"
        android:layout_width="match_parent"
        android:layout_height="581dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/colorAccent"
            android:padding="16dp"
            android:text="Especialidad"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="124dp"
            android:layout_margin="16dp"
            android:background="@color/colorMora"
            android:src="@drawable/perf4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="Nombre"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="244dp"
            android:background="@color/colorMora">

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:padding="16dp"
                android:text="TextView" />


            <ImageView
                android:id="@+id/ic_call"
                android:layout_width="46dp"
                android:layout_height="68dp"
                android:layout_above="@+id/btn_editar"
                android:layout_below="@+id/txt_description"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-1dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="68dp"
                android:layout_weight="1"
                android:src="@drawable/ic_call" />


            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="48dp"
                android:layout_height="63dp"
                android:layout_above="@+id/btn_editar"
                android:layout_below="@+id/ic_call"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="-61dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="14dp"
                android:layout_weight="1"
                android:src="@drawable/ic_email" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="249dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_description"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="39dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_toEndOf="@+id/ic_call"
                android:text="TextView"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/button2"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="232dp"
                android:layout_marginBottom="12dp"
                android:text="Agendar tutoria" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="104dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="100dp"
                android:layout_marginTop="146dp"
                android:layout_marginEnd="207dp"
                android:text="TextView" />

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>